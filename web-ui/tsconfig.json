{
  "compilerOptions": {
    "outDir": "ts-out/",
    "target": "es5",
    "module": "es2015",
    "strict": true,
    // required by ramda
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "esnext"]
  },
  "include": ["__mocks__/**/*.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
